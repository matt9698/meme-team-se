<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import property_tycoon.view.PropertyPosition?>

<fx:root fx:id="propertyPosition" type="PropertyPosition" xmlns:fx="http://javafx.com/fxml">
    <stylesheets>
        <URL value="@PropertyPosition.css" />
    </stylesheets>
    <top>
        <Region fx:id="banner" background="${propertyPosition.bannerBackground}" />
    </top>
    <center>
        <VBox style="-fx-alignment: center;">
            <Label fx:id="text" text="${propertyPosition.text}" />
        </VBox>
    </center>
</fx:root>
